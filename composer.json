{
    "name": "pmjones/php-styler",
    "autoload": {
        "psr-4" : {
            "PhpStyler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "PhpStyler\\": "tests/"
        }
    },
    "require": {
        "nikic/php-parser": "^4.0",
        "pmjones/auto-shell": "^1.0"
    },
    "require-dev": {
        "pds/composer-script-names": "^1.0",
        "pds/skeleton": "^1.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "analyze": "./vendor/bin/phpstan",
        "check": "composer cs-fix && composer test && composer analyze",
        "cs-fix": "php ./bin/php-styler.php apply .php-styler.php",
        "cs-fix-preview": "php ./bin/php-styler.php preview .php-styler.php",
        "test": "./vendor/bin/phpunit",
        "test-coverage": "./vendor/bin/phpunit --coverage-html=./tmp/unit"
    }
}
